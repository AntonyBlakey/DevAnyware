USER dev
# Check here for the latest viable version: https://rust-lang.github.io/rustup-components-history/index.html
RUN    curl https://sh.rustup.rs -sSf | sh -s -- -y --default-toolchain nightly-2019-03-15 \
    && rustup component add rls rust-analysis rust-src rustfmt clippy \
    && sudo apt-get update \
    && sudo apt-get install -y --no-install-recommends pkg-config libssl-dev \
    && cargo install cargo-tree cargo-modules cargo-outdated cargo-cache cargo-make cargo-script cargo-generate
USER root