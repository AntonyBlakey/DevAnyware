[colors]
fg = #ffffff
bgcontent = #000000

fgicon = #ffffff

fgcontent = #aaaaaa

bgdate = #99aaee
bgtime = #99aaee
bgcpu = #cccc88
bgmemory = #bbccaa

fgxwindow = #00ddff

bgi3 = #aa8877
bgi3f = #ccaa99
bgtray = #bbcc99
alert = #009900

tp = #aa000000

[settings]
format-padding = 0
format-margin = 0

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 22 

background = ${colors.tp}
foreground = ${colors.fg}

bottom = false

border-color = ${colors.tp}
border-size = 0
border-left-size = 10
border-right-size = 10

module-margin-left = 0
module-margin-right = 0
padding-left = 0
padding-right = 0

font-0 = Source Code Pro:pixelsize=10;2
font-1 = DejaVu Sans:pixelsize=9;2

modules-left = i3 key-mode
modules-center = xwindow
modules-right = memory cpu date
fixed-center = true

; override-redirect = true
; wm-restack = i3

tray-position = right
tray-background = ${colors.bgtray}

[module/date]
type = internal/date
interval = 1
; date = %Y-%m-%d
date = %a %d %b
time = %H:%M:%S
format-foreground = ${colors.fgcontent}
label = %date% %time%
format-margin = 2

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU: " 
format-foreground = ${colors.fgcontent}
format = <ramp-coreload>
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
format-margin = 2

[module/memory]
type = internal/memory
interval = 10
format-foreground = ${colors.fgcontent}
label = %mb_used% used of %gb_total%
format-margin = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:160:...%
format-foreground = ${colors.fgxwindow}

[module/key-mode]
type = custom/script
exec = ~/.config/polybar/command-mode.sh
tail = true
format-foreground = #000000
format-background = #00ddff
format-padding = 1
format-margin = 1

[module/i3]
type = internal/i3
format = <label-state>
pin-workspaces=true

ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;0
ws-icon-default = +

label-focused = %icon%
label-focused-background = #00bb00
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-urgent = %icon%
label-urgent-background = #ff0000
label-urgent-padding = 1
