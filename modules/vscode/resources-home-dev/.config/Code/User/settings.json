{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Night Owl Light",
  "window.restoreFullscreen": true,
  "window.titleBarStyle": "native",
  "editor.fontFamily": "'Fira Code'",
  "terminal.integrated.fontFamily": "'Fira Code'",
  "vim.easymotionMarkerFontFamily": "'Fira Code'",
  "editor.fontSize": 11,
  "terminal.integrated.fontSize": 11,
  "vim.easymotionMarkerFontSize": "11",
  "vim.easymotionMarkerHeight": 17,
  "vim.easymotionMarkerForegroundColorTwoChar": "#000000",
  "vim.easymotionMarkerForegroundColorOneChar": "#000000",
  "vim.easymotionMarkerBackgroundColor": "#55ddff",
  "editor.fontWeight": "500",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontWeightBold": "900",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": false,
  "editor.renderIndentGuides": true,
  "editor.wordWrapColumn": 140,
  "editor.tabCompletion": "on",
  "editor.autoIndent": true,
  "editor.minimap.enabled": false,
  "terminal.integrated.shell.linux": "/usr/bin/zsh",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.useSystemClipboard": true,
  "vim.leader": " ",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.foldfix": true,
  "breadcrumbs.enabled": true,
  "files.associations": {
    "*.docker": "dockerfile",
    "zshenv": "shellscript"
  },
  "workbench.sideBar.location": "right",
  "diffEditor.ignoreTrimWhitespace": true,
  "gitlens.views.repositories.files.layout": "auto",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "gitProjectManager.baseProjectsFolders": ["/home/dev/work"],
  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.format.enable": true,
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "prettier.printWidth": 140,
  "npm.enableScriptExplorer": true,
  "reason_language_server.format_width": 140,
  "python.pythonPath": "/usr/bin/python3",
  "bracket-pair-colorizer-2.colors": ["Orange", "Orchid", "LightSkyBlue", "Green"]
}
